<% layout('./layouts/boilerplate')%>
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation nonvalidate" action="/campgrounds/<%= campground._id%>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="doller">$</span>
                    <input class="form-control" type="text" id="price" placeholder="0" name="campground[price]" value="<%=campground.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="image">Upload Image</label>
                <input class="form-control" type="file" id="image" name="campground[images]" multiple>
            </div>
            <div class="mb-3">
                <% campground.images.forEach((img, i) => { %>
                    <img class="img-thumbnail" src="<%=img.url%>" alt="<%=img.filename%>">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        <label class="form-check-label" for="img-<%=i%>">Deleted</label>
                    </div>
                    <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
                <a class="btn btn-warning" href="/campgrounds">Cancel</a></footer>
            </div>
        </form>
    </div>